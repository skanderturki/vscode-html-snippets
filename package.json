{
	"name": "html-snippets-ska",
	"displayName": "HTML SNIPPETS SKA",
	"description": "Snippets for html documents, tables, forms, css reset, etc.",
	"version": "0.2.0",
	"publisher": "skanderturki",
	"keywords": [
		"HTML",
		"Snippets",
		"HTML5",
		"CSS",
		"CSS-Reset"
	],
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#C80000",
		"theme": "dark"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/skanderturki/vscode-html-snippets"
	},
	"homepage": "https://github.com/skanderturki/vscode-html-snippets",
	"engines": {
		"vscode": "^1.28.0"
	},
	"categories": [
		"Snippets"
	],
	"contributes": {
		"snippets": [
			{
				"language": "html",
				"path": "./snippets-html.json"
			},
			{
				"language": "css",
				"path": "./snippets-css.json"
			}
		],
		"keybindings": [
			{
				"key": "ctrl+shift+h",
				"mac": "cmd+shift+h",
				"command": "editor.action.insertSnippet",
				"when": "editorTextFocus && editorLangId == html",
				"description": "Insert an HTML starter code.",
				"args": {
					"name": "HTML5 Start"
				}
			},
			{
				"key": "ctrl+shift+t",
				"mac": "cmd+shift+t",
				"command": "editor.action.insertSnippet",
				"when": "editorTextFocus && editorLangId == html",
				"description": "Insert an HTML table.",
				"args": {
					"name": "HTML Table"
				}
			},
			{
				"key": "ctrl+shift+f",
				"mac": "cmd+shift+f",
				"command": "editor.action.insertSnippet",
				"when": "editorTextFocus && editorLangId == html",
				"description": "Insert an HTML form.",
				"args": {
					"name": "HTML Form"
				}
			},
			{
				"key": "ctrl+shift+o",
				"mac": "cmd+shift+o",
				"command": "editor.action.insertSnippet",
				"when": "editorTextFocus && editorLangId == html",
				"description": "Insert an Optimized HTML starter code.",
				"args": {
					"name": "HTML5 Start - optimized"
				}
			},
			{
				"key": "ctrl+alt+r",
				"mac": "cmd+alt+r",
				"command": "editor.action.insertSnippet",
				"when": "editorTextFocus && editorLangId == css",
				"description": "Insert a CSS reset.",
				"args": {
					"name": "CSS Reset"
				}
			}
		],
		"categories": [
			"Snippets"
		]
	}
}
